# Indica que este é o arquivo de configuração raiz
root = true

# Configurações aplicadas a todos os arquivos
[*]
# Define o tipo de quebra de linha (Line Feed - Unix)
end_of_line = lf
# Define o estilo de indentação como espaços
indent_style = space
# Define o tamanho da indentação como 2 espaços
indent_size = 2
# Define a codificação de caracteres como UTF-8
charset = utf-8
# Remove espaços em branco no final das linhas
trim_trailing_whitespace = true
# Adiciona uma linha em branco no final do arquivo
insert_final_newline = true
